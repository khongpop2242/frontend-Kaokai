{
  "name": "furniture-office-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API สำหรับเว็บไซต์เฟอร์นิเจอร์ออฟฟิศ",
  "main": "server.ts",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx server.ts",
    "build": "tsc",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "node scripts/setup-database.js",
    "db:seed-products": "node scripts/seed-products.js",
    "db:seed-all": "node scripts/seed-data.js",
    "db:reset": "npm run db:setup && npm run db:seed-all",
    "db:test": "node scripts/test-connection.js",
    "db:quick-setup": "node scripts/quick-setup.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.56",
    "@types/react": "^18.0.17",
    "@types/react-dom": "^18.0.6",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "prisma": "^6.13.0",
    "tsx": "^4.20.3",
    "typescript": "5.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
